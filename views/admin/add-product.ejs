<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(errorMessage) {%>
            <div class="user-message user-message--error" id="flash-messages"><%= errorMessage%></div>
        <%}%>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input class="<%=validationErrors.find(e=> e.path === 'title') ? 'invalid' : '' %>" type="text" name="title" id="title" value="<%= oldInput.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image</label>
                <input class="<%=validationErrors.find(e=> e.path === 'imageUrl') ? 'invalid' : '' %>" type="text" name="imageUrl" id="imageUrl" value="<%= oldInput.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input class="<%=validationErrors.find(e=> e.path === 'price') ? 'invalid' : '' %>" type="number" name="price" id="price" step="any" value="<%= oldInput.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea class="<%=validationErrors.find(e=> e.path === 'description') ? 'invalid' : '' %>" name="description" id="description" rows="5" step="0.01" value="<%= oldInput.description %>" ></textarea>
            </div>
            <input type="hidden" value="<%=csrfToken%>" name="_csrf">
            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>